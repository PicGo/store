{
  "extends": "standard-with-typescript",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.js"
      ],
      "rules": {
        "@typescript-eslint/strict-boolean-expressions": "off",
        "@typescript-eslint/return-await": "off"
      }
    }
  ]
}