{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/*",
    ],
    "lib": [
      "ScriptHost",
      "esnext",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
